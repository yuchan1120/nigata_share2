<article class="reservation-index">
 <p class="font_size_1-5rem">予約済みルーム一覧</p>
    <table>
      <thead>
        <tr>
        <th>部屋名</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>人数</th>
        <th>合計金額</th>
        <th>予約確定日時</th>
        <th>削除</th>
        </tr>
      </thead>
      <tbody>
      <% @reservations.each do |reservation| %>
          <tr>
              <td><%= reservation.room.name %></td>
              <td><%= reservation.start_day %></td>
              <td><%= reservation.end_day %></td>
              <td><%= reservation.people %>人</td>
              <td>¥<%= reservation.total_price %></td>
              <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
              <% if reservation.user_id == current_user.id %>
                <td><%= link_to "削除", reservation , method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
              <% else %>
                <td><%= "-" %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</article>
